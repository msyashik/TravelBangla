<%- include("../partials/header") %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome To TravelBangla!</h1>
            <p>View our tourist spots from all over Bangladesh</p>
            <p>
                <a class = "btn btn-primary btn-large" href = "/campgrounds/new">Add New Tourist Spot</a>
            </p>
        </div>
    </header>

    <div class = "row text-center" style = "display: flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
            <h3><%= noMatch %></h3>
            <p>
                <form class = "form-inline" action = "/campgrounds" method = "GET">
                    <div class = "form-group">
                        <input class = "form-control" type = "text" name = "search" placeholder="Campground search...">
                        <input class = "btn btn-default" type = "submit" value = "Search">
                    </div>
                </form>
            </p>
            <% } %>
        </div>
        <% for(var i = 0; i < campgrounds.length; i++){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src = "<%= campgrounds[i].image%>" style = "height: 25rem">
                    <div class = "caption">
                        <h4><%= campgrounds[i].name%></h4>
                    </div>
                    <p>
                        <a href = "/campgrounds/<%= campgrounds[i]._id%>" class = "btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%}%>
    </div>
</div>

<%- include("../partials/footer") %>